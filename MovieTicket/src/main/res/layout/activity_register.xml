<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee"
    android:gravity="center_horizontal"
    android:weightSum="1">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/title"
        android:id="@+id/login_top_layout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:id="@+id/login_reback_btn"
            android:background="@drawable/title_btn_back"
            android:onClick="login_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:layout_centerInParent="true" />
    </RelativeLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="用户名"
        android:inputType="text"
        android:maxLength="11"
        android:id="@+id/login_user_edit"
        android:layout_below="@+id/login_top_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#000"
        android:textSize="18sp"
        android:background="@drawable/login_editbox"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_passwd_edit"
        android:layout_marginTop="18dp"
        android:layout_marginRight="20dp"
        android:hint="密码"
        android:inputType="textPassword"
        android:textColor="#000"
        android:textSize="18sp"
        android:background="@drawable/login_editbox"
        android:layout_below="@+id/login_user_edit"
        android:layout_alignLeft="@+id/login_repasswd"
        android:layout_alignStart="@+id/login_repasswd" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_repasswd"
        android:layout_marginTop="10dp"
        android:hint="确认密码"
        android:inputType="textPassword"
        android:textColor="#000"
        android:textSize="18sp"
        android:background="@drawable/login_editbox"
        android:layout_below="@+id/login_passwd_edit"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_repasswd"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="注册"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:background="@drawable/btn_style_orage"
            android:layout_margin="20dp"
            android:id="@+id/login_register_btn"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</RelativeLayout>
