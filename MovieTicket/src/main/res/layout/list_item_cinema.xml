<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/cinema_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="5dp"
        android:text="中北影院"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/cinema_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/cinema_name"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:text="9.1"
        android:textSize="15sp"
        android:textColor="#F55511"/>

    <TextView
        android:id="@+id/cinema_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="尖草坪区上兰街道12号"
        android:textSize="15sp"
        android:textColor="#afa4a4"
        android:layout_below="@+id/cinema_name"
        android:layout_alignLeft="@+id/cinema_name"
        android:layout_alignStart="@+id/cinema_name" />
</RelativeLayout>